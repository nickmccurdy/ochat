extends layout

block content
  .row
    .col-sm-9: .panel.panel-default
      .panel-heading: strong Lounge
      ul#message-list.list-group

    .col-sm-3: .panel.panel-default
      .panel-heading: strong Users
      ul#user-list.list-group
        +user('George')
        +user('John')
        +user('Paul')
        +user('Ringo')

  .input-group
    input#message-field.form-control(type='text', autofocus)
    span.input-group-btn
      button#message-send-button.btn.btn-primary(type='button') Send
